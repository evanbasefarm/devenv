{

	"variables": {
		"currentuser": "{{env `USER`}}",
    		"aws_access_key": "",
   		"aws_secret_key": ""
	},

	"builders": [{
		"type": "docker",
		"image": "ubuntu",
		"commit": true,
		"pull": true,
		"volumes": {
			"/home/{{user `currentuser`}}/.bash_history":"/root/.bash_history"
		}
	}],

	"provisioners": [{
		"type": "shell",
		"environment_vars": [
    			"access_key": "{{user `aws_access_key`}}",
    			"secret_key": "{{user `aws_secret_key`}}"
                 ],
		"script": "./configure.sh"
	}],

	"post-processors": [
		[{
			"type": "docker-tag",
			"repository": "local",
			"tag": "aws-dev"
		}]
	]

}
